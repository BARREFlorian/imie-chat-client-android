<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calvoitmove.projett.CreateChannelActivity">

    <TextView
        android:id="@+id/nom_salle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Nom de votre salle :"
        android:layout_marginTop="50dp"

        app:layout_constraintHorizontal_bias="0.125"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/champ_nom_salle"

        />

    <EditText
        android:id="@+id/champ_nom_salle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Entrer le nom de votre salle ..."
        android:layout_margin="15dp"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nom_salle"
        app:layout_constraintBottom_toTopOf="@id/button_creer"
    />

    <Button
        android:id="@+id/button_creer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:onClick="changeToChannel"
        android:text="Creer la salle"

        app:layout_constraintHorizontal_bias="0.125"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/champ_nom_salle"
    />
</android.support.constraint.ConstraintLayout>