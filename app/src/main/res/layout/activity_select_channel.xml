<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calvoitmove.projett.SelectChannelActivity">

    <ScrollView
        android:id="@+id/scrollListJoinedClient"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/createChannel"
        android:layout_width="match_parent"
        android:layout_height="430dp">
    </ScrollView>

    <Button
        android:id="@+id/createChannel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Creer une \n salle "

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/joinChannel"
        app:layout_constraintTop_toBottomOf="@id/scrollListJoinedClient"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
    />

    <Button
        android:id="@+id/joinChannel"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:text="Rejoindre une salle"

        app:layout_constraintLeft_toRightOf="@id/createChannel"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollListJoinedClient"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
    />

</android.support.constraint.ConstraintLayout>
