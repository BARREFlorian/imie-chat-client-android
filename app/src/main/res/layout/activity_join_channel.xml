<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="calvoitmove.projett.JoinChannelActivity">

    <android.support.v7.widget.RecyclerView
        android:id="@+id/RecyclerListAvailableChannel"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/joinChannel"
        android:layout_width="match_parent"
        android:layout_height="430dp">
    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/joinChannel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rejoindre la salle selectionnÃ©e"

        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/RecyclerListAvailableChannel"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10dp"
        android:onClick="changeToChannel"
    />

</android.support.constraint.ConstraintLayout>
